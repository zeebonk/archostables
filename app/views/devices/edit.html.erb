<h1>Editing device</h1>

<% form_for(@device, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :family_id %><br />
    <%= select_tag("device[family_id]", options_from_collection_for_select(Family.all, :id, :name)) %>
  </p>
  <p>
    <%= f.label :storage %><br />
    <%= f.text_field :storage %>
  </p>
  <p>
    <%= f.label :screen %><br />
    <%= f.text_field :screen %>
  </p>
  <p>
    <%= f.label :android_version %><br />
    <%= f.text_field :android_version %>
  </p>
  <p>
    <%= f.label :wifi %><br />
    <%= f.check_box :wifi %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
	<p>
    <%= f.label :small_image %><br />
    <%= f.text_field :small_image %>
  </p>
	<p>
    <%= f.label :single_line_description %><br />
    <%= f.text_field :single_line_description %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %><br>
    <%= image_tag("/images/small/" + @device.image) %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', devices_path %>